{% extends "layout.html.twig" %}

{% block title %}Coucou !{% endblock %}

{% block content %}
<div class="container">
    {% if session.login is defined %}
    <h1>Bonjour, {{infos.Nom}} {{infos.Prenom}}</h1>
    <h2>Vous êtes {{role}} </h2>
    <p>Connecté avec l'email {{session.login}}</p>
        {% if infos.CompteVerifie == 1 %}
            <p>Votre compte est vérifié!</p>
        {% else %}
            <p>Votre compte n'est pas encore vérifié !</p>
        {% endif %}
    <p>Vous êtes dans l'équipe : {{ equipe.IDEquipe }} </p>
    <a href="?page=modifMdp&email={{session.login}}"> Modifier votre mot de passe !</a>
    {% else %}
    <div class="alert alert-danger" role="alert">
        <a href="?page=login" class="alert-link"> Connectez vous !</a>
    </div>
    {% endif %}
</div>
{% endblock %}